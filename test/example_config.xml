<?xml version="1.0" encoding="UTF-8"?>
<businesscopy>
	<copyset type="partition">
		<source>
			<disk name="/dev/sdd"/>
		</source>
		<destination>
			<disk name="/dev/sda"/>
		</destination>
	</copyset>	
	<copyset type="lvm">
		<source>
			<volumegroup name="vg1"/>
		</source>
		<destination>
  			<volumegroup name="vg2">
  				<physicalvolume name="/dev/sdd"/>
  				<physicalvolume name="/dev/sde"/>
  			</volumegroup>
  		</destination>
	</copyset>
	<copyset type="filesystem">
  		<source type="filesystem">
  			<device name="/dev/vg_test/lv_source">
    			<filesystem type="gfs"/>
    			<mountpoint name="/mnt/source"/>
    		</device>
  		</source>
  		<destination type="filesystem">
    		<device name="/dev/vg_test/lv_dest" id="rootfs">
      			<filesystem type="gfs" clustername="neuercluster"/>     	
      			<mountpoint name="/mnt/tmp">
      				<option name="lockproto" value="lock_nolock"/>
      			</mountpoint>
   			</device>
   		</destination>
	</copyset>
	<copyset type="filesystem">
  		<source type="filesystem">
  			<device name="/dev/sdd1" id="bootfs">
    			<filesystem type="ext3"/>
    			<mountpoint name="/boot"/>
    		</device>
  		</source>
  		<destination type="filesystem">
    		<device name="/dev/sda1">
      			<filesystem type="ext3"/>     	
      			<mountpoint name="/mnt/tmp"/>
   			</device>
   		</destination>
	</copyset>
	<copyset type="bootloader">
		<source/>
		<destination>	
			<disk name="/dev/sda"/>
			<bootloader type="grub"/>
		</destination>
	</copyset>
	<modificationset>
		<device refid="rootfs">
			<file name="cluster/cdsl/node1/etc/sysconfig/network">
				<modification type="regexp" search="HOSTNAME=.*" replace="HOSTNAME=myhostname"/>
			</file>
			<file name="etc/cluster/cluster.conf">
				<modification type="copy" sourcefile="/etc/copysets/lilr10023/cluster.conf"/>
			</file>
		</device>
		<device refid="bootfs">
			<archive type="cpio" name="/initrd_sr-2.6.9-34.0.1.ELsmp.img">				
				<file name="etc/cluster.conf">
					<modification type="copy" sourcefile="/etc/copysets/lilr10023/cluster.conf"/>
				</file>
			</archive>
		</device>
	</modificationset>
</businesscopy>
