<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE enterprisecopy SYSTEM "file:///opt/atix/comoonics_cs/xml/comoonics-enterprise-copy.dtd">
<enterprisecopy name="&test;">
	<copyset type="partition">
		<source type="disk">
			<disk name="/dev/sdc"/>/usr/share/doc/HTML/index.html
		</source>
		<destination type="disk">
			<disk name="/dev/sda"/>
		</destination>
	</copyset>
	<copyset type="lvm">
		<source type="lvm">
			<volumegroup name="VG_SHAREDROOT"/>
		</source>
		<destination type="lvm">
  			<volumegroup name="VG_SHAREDROOT_new">
  				<physicalvolume name="/dev/sda"/>
  			</volumegroup>
  		</destination>
	</copyset>
	<copyset type="filesystem">
  		<source type="filesystem">
  			<device name="/dev/VG_SHAREDROOT/LV_SHAREDROOT">
    			<filesystem type="gfs"/>
    			<mountpoint name="/"/>
    		</device>
  		</source>
  		<destination type="filesystem">
    		<device name="/dev/VG_SHAREDROOT_new/LV_SHAREDROOT" id="rootfs">
      			<filesystem type="gfs" clustername="vmwareclusternew"/>     	
      			<mountpoint name="/mnt/tmp">
      				<option name="lockproto" value="lock_nolock"/>
      			</mountpoint>
   			</device>
   		</destination>
	</copyset>
	<copyset type="filesystem">
  		<source type="filesystem">
  			<device name="/dev/sdd1" id="bootfs">
    			<filesystem type="ext3"/>
    			<mountpoint name="/boot"/>
    		</device>
  		</source>
  		<destination type="filesystem">
    		<device name="/dev/sda1">
      			<filesystem type="ext3"/>     	
      			<mountpoint name="/mnt/tmp"/>
   			</device>
   		</destination>
	</copyset>
	<copyset type="bootloader">
		<source type="none"/>
		<destination type="disk">	
			<disk name="/dev/sda"/>
			<bootloader type="grub"/>
		</destination>
	</copyset>
	<modificationset type="filesystem">
		<device refid="rootfs">
			<modification type="regexp" search="HOSTNAME=.*" replace="HOSTNAME=myhostname">
				<file name="cluster/cdsl/node1/etc/sysconfig/network"/>
			</modification>
			<modification type="copy">
				<file name="etc/cluster/cluster.conf" sourcefile="/etc/copysets/lilr10023/cluster.conf"/>
			</modification>
		</device>
	</modificationset>
	<modificationset type="filesystem">
		<device refid="bootfs">
			<modification type="copy">
				<requirement type="archive" format="cpio" check="yes" name="/home/marc/tmp/initrd-2.6.16-1.2069_FC4.img" dest="/tmp/test"/>
				<file name="etc/cluster.conf" sourcefile="/etc/copysets/lilr10023/cluster.conf"/>
			</modification>
		</device>
	</modificationset>
</enterprisecopy>
