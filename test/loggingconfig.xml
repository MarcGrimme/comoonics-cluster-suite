<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE logging SYSTEM "file:/opt/atix/comoonics-cs/xml/comoonics-enterprise-copy.dtd">
<logging>
    <loggers>
        <logger name="root" handlers="atix1,atix2">
            <logger name="atix" handlers="atix1,atix2">
                <logger name="atix1" handlers="atix1"/>
                <logger name="atix2" handlers="atixdb,atix2" level="DEBUG"/>
            </logger>
        </logger>
    </loggers>
    <handlers>
        <handler name="atix1" class="StreamHandler" formatter="form01">
            <properties>
                <property name="stream">sys.stdout</property>
            </properties>
            <args>
                <arg>sys.stdout</arg>
            </args>
        </handler>
        <handler name="atix2" class="FileHandler" formatter="form01">
            <args>
                <arg>"/tmp/ComLogTest1.log"</arg>
                <arg>"w"</arg>
            </args>
        </handler>
        <handler name="atixdb" class="DBLogger" formatter="form01" level="DEBUG">
            <args>
                <arg>"localhost"</arg>
                <arg>"atix"</arg>
                <arg>"atix"</arg>
                <arg>"atix_cmdb"</arg>
            </args>
        </handler>
    </handlers>
    <formatters>
        <formatter name="form01">
            <format>Formater01 %(asctime)s %(levelname)s %(message)s</format>
            <dateformat></dateformat>
        </formatter>
    </formatters>
</logging>
